<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true" android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/hiad_4_dp" />
            <solid android:color="@color/hiad_down_btn_pressing_color" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="false" android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/hiad_4_dp" />
            <solid android:color="@color/hiad_transparent" />
        </shape>
    </item>
    <item android:state_enabled="false" android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/hiad_4_dp" />
            <solid android:color="@color/hiad_transparent" />
        </shape>
    </item>
</selector>