    <com.blued.android.module.common.view.CommonTopTitleNoTrans android:id="@id/top_title" android:layout_width="fill_parent" android:layout_height="wrap_content" app:bg_transparent="true" app:hide_btm_line="true" app:hide_right="true" />
    <TextView android:textSize="15.0sp" android:textStyle="bold" android:textColor="@color/syc_h" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15.0dip" android:layout_marginRight="15.0dip" android:text="1、什么是社交礼物兑换券？" />
    <TextView android:textSize="15.0sp" android:textColor="@color/syc_h" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15.0dip" android:layout_marginTop="8.0dip" android:layout_marginRight="15.0dip" android:text="社交礼物兑换券是在社交聊天场景中赠送他人礼物时使用的兑换券，每张券在兑换券限制额度内，可  免费购买1个礼物并送予他人，兑换券仅限个人兑换使用，不可转赠他人。" />
    <TextView android:textSize="15.0sp" android:textStyle="bold" android:textColor="@color/syc_h" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15.0dip" android:layout_marginTop="15.0dip" android:layout_marginRight="15.0dip" android:text="2、如何获取社交礼物兑换券？" />
    <TextView android:textSize="15.0sp" android:textColor="@color/syc_h" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15.0dip" android:layout_marginTop="8.0dip" android:layout_marginRight="15.0dip" android:text="通过购买会员服务提升会员等级、或参与相应活动获取。" />
    <TextView android:textSize="15.0sp" android:textStyle="bold" android:textColor="@color/syc_h" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15.0dip" android:layout_marginTop="15.0dip" android:layout_marginRight="15.0dip" android:text="3、如何使用社交礼物兑换券？" />
    <TextView android:textSize="15.0sp" android:textColor="@color/syc_h" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15.0dip" android:layout_marginTop="8.0dip" android:layout_marginRight="15.0dip" android:text="用户拥有社交礼物兑换券时，可在聊天页或他人主页赠送对方社交礼物，每张社交礼物兑换券仅可在  使用有效期内兑换券面额以内的社交礼物1次，未使用面额不累积、不折现、不退款。" />
    <TextView android:textSize="15.0sp" android:textStyle="bold" android:textColor="@color/syc_h" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15.0dip" android:layout_marginTop="15.0dip" android:layout_marginRight="15.0dip" android:text="4、如何在安卓、ios设备使用社交礼物兑换券？" />
    <TextView android:textSize="15.0sp" android:textColor="@color/syc_h" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15.0dip" android:layout_marginTop="8.0dip" android:layout_marginRight="15.0dip" android:layout_marginBottom="20.0dip" android:text="会员收到的社交礼物兑换券在安卓ios设备均可正常使用。受支付渠道影响，在安卓设备中，兑换券面额显示为“X元社交礼物兑换券”，在ios设备中，则显示为 “XX弯豆社交礼物兑换券”。兑换券展示的单位不同但价值相同，请放心使用。" />
